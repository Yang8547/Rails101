<div class="col-md-12">
  
    <div class="group">
        <%if current_user && current_user==@group.user %>
        <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
        <% end %>

        <%= link_to("Write a Post", new_group_post_path(@group), class: "btn btn-default pull-right")%>

         <span class="pull-right">
            <% if current_user && current_user.is_member_of?(@group) %>
                <label class="label label-success"> Group Member </label>
            <% else %>
                <label class="label label-warning"> Not Group Member </label>
            <% end %>
        </span>
    </div>
  

  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

  <%# list all posts %>
  <table class="table">
    <thead>
     <tr>
        <th>Contedt</th>
        <th>Created by</th>
        <th>Created at</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%# pagination %>
  <div class="text-center">
      <%= will_paginate @posts %>
  </div>
</div>